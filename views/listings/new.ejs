<% layout("/layouts/boilerplate.ejs")%>
<body>

    <div class="row mt-3">
        
        <div class="col-8 offset-2">
            <h3>Create New Listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" placeholder="Enter title" type="text" required>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Add description" type="text" required></textarea>
                    <div class="invalid-feedback">Add short description</div>
                </div>

                <!-- //change -->
                <!-- <div class="mb-3">
                    <label for="image-filename" class="form-label">Image Filename</label>
                    <input name="listing[image][filename]" class="form-control" placeholder="Add image filename" type="text">
                </div> -->
            
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image][url]" class="form-control"  type="file" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Add price" class="form-control"  type="number" required>
                        <div class="invalid-feedback">Add valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Add country" class="form-control" type="text" required>
                        <div class="invalid-feedback">Add valid country name</div>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Add location" class="form-control" type="text" required>
                        <div class="invalid-feedback">Add valid location</div>
                    </div>
                    <div class="mb-3 col-md-4">
                        <label for="categories" class="form-label" >Category</label>
                        <select id="categories" name="listing[categories]" required>
                            <option value="">Choose Category</option>
                            <option value="trending">Trending</option>
                            <option value="rooms">Rooms</option>
                            <option value="iconic-cities">Iconic cities</option>
                            <option value="mountains">Mountain</option>
                            <option value="amazing-pools">Amazing pools</option>
                            <option value="temples">Temples</option>
                            <option value="beach">Beach</option>
                            <option value="hotels">Hotels</option>
                            <option value="restaurants">Restaurant</option>
                            <option value="treking">Treking</option>
                            <option value="monuments">Monuments</option>
                            
                        </select>
                        <div class="invalid-feedback">Add Category</div>
                    </div>
                </div>
            

                <button type="submit" class="btn btn-dark add-btn mb-3" >Add</button>
                
            </form>
        </div>

    </div>

</body>